<div class="list-group-item">
<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>

  <% end %>

  <div  class="list-group-item">
    <%= f.label :顧客名 %><br>
    <%= f.text_field :customer_name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>