<%= form_for([@task.user, @task]) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count%>個のエラー！</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :charge_id %>
  </div>

  <div class="field">
    <%= f.label :タスク名 %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :タスク内容 %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :期日 %><br>
    <%= f.date_select(
         :deadline,
          start_year: Time.now.year,
          end_year:   Time.now.year + 18,
          default:   Time.now) %>
  </div>

  <div class="field">
    <%= f.label :完了チェック %><br>
    <%= f.check_box :done %>
  </div>
  <div class="field">
    <%= f.label :ステータス %><br>
    <%= f.select :status, [["未着手", "0"], ["対応中", "1"]] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
