        <li><a href="#">
          <% if user_signed_in? %> 
          
          <script>
            var pusher = new Pusher('<%= Pusher.key %>');
            var channel = pusher.subscribe('notifications' + <%= current_user.id.to_s %>);
                channel.bind('message', function(data) {
                $('#unreadcount').html(data.unread_count);
                });
          </script>
          
          <li><%=link_to "マイプロジェクト",projects_path %></li>
