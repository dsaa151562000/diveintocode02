            <li><%=link_to "お問い合わせ",contact_new_path %></li>
            <li><%=link_to "お問い合わせ一覧",contact_index_path %></li>
          　<li role="separator" class="divider"></li>
            <li><%=link_to "ユーザー一覧",users_index_path %></li>
          </ul>
            </li>
            <li class="dropdown notifications-dropdown"><%= render 'layouts/dropdown/notifications' %></li>
            
        <% else %>
          <li><%= link_to "ログイン", new_user_session_path %></li> 
        <% end %>
          </a></li>
        </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% if notice %>
<div class="alert"><%= notice %></div>
<% end %>
<% if alert %>
<div class="alert"><%= alert %></div>
<% end %>
          <%= yield %>



