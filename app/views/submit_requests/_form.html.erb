<%= form_for([@user, @submit_request]) do |f| %>


 <div class="form-group"><%= f.collection_select :task_id, @tasks, :id, :title %></div>
 
 <div class="form-group"><%= f.collection_select :charge_id, @users, :id, :name %></div>
 
 <div class="form-group"><%= f.text_area  :message, placeholder: "依頼メッセージ", size: "50*100" %></div>
 <div class="form-group"><%= f.hidden_field :user_id%></div>
 <div class="form-group"><%= f.hidden_field :status %></div>
 <div><%= f.submit "依頼する", class: "btn btn-large btn-primary" %></div>
<% end %>

<%= link_to '依頼一覧', user_submit_requests_path %>
